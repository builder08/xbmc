<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains the mapping of keys (RCU Vuplus) to actions within Kodi -->
<!-- keyboard created and adapted for Vuplus RCU by Darkmantk and Evox, members of OpenSPA Team -->

<keymap>
	<global>
		<keyboard>
			<power>XBMC.Quit()</power>
			<menu>ActivateWindow(Home)</menu>
			<x>SwitchPlayer</x>
			<text>ContextMenu</text>
			<z>SwitchToEnigma2</z>
			<e>Info</e>

			<up>Up</up>
			<down>Down</down>
			<left>Left</left>
			<right>Right</right>
			<pageup>PageUp</pageup>
			<pagedown>PageDown</pagedown>
			<return>Select</return>
			<escape>Back</escape>
			<prev_track>SkipPrevious</prev_track>
			<next_track>SkipNext</next_track>

			<volume_mute>Mute</volume_mute>
			<volume_up>VolumeUp</volume_up>
			<volume_down>VolumeDown</volume_down>

			<zero>Number0</zero>
			<one>Number1</one>
			<two>Number2</two>
			<three>Number3</three>
			<four>Number4</four>
			<five>Number5</five>
			<six>Number6</six>
			<seven>Number7</seven>
			<eight>Number8</eight>
			<nine>Number9</nine>

			<play_pause>PlayPause</play_pause>
			<fastforward>FastForward</fastforward>
			<rewind>Rewind</rewind>
			<record>Screenshot</record>
			<stop>Stop</stop>

			<red>ActivateWindow(pictures)</red>
			<green>ActivateWindow(video)</green>
			<yellow>ActivateWindow(music)</yellow>
			<blue>ActivateWindow(programs)</blue>
		</keyboard>
	</global>

	<FullscreenVideo>
		<keyboard>
			<fastforward>FastForward</fastforward>
			<rewind>Rewind</rewind>
			<next_track>StepForward</next_track>
			<prev_track>StepBack</prev_track>
			<return>OSD</return>
			<e>Info</e>
			<j>CodecInfo</j>
			<z>AspectRatio</z>
			<l>ShowSubtitles</l>
			<left>StepBack</left>
			<right>StepForward</right>
			<up>ChapterOrBigStepForward</up>
			<down>ChapterOrBigStepBack</down>
			<o>AudioDelay</o>
			<escape>Fullscreen</escape>
			<x>Playlist</x>
			<y>ActivateWindow(Teletext)</y>
			<pageup>SkipNext</pageup>
			<pagedown>SkipPrevious</pagedown>
		</keyboard>
	</FullscreenVideo>

	<VideoTimeSeek>
		<keyboard>
			<return>Select</return>
		</keyboard>
	</VideoTimeSeek>

	<FullscreenInfo>
		<keyboard>
			<fastforward>FastForward</fastforward>
			<rewind>Rewind</rewind>
			<next_track>StepForward</next_track>
			<j>CodecInfo</j>
			<escape>Back</escape>
			<return>OSD</return>
		</keyboard>
	</FullscreenInfo>

	<PlayerControls>
		<keyboard>
			<escape>Back</escape>
		</keyboard>
	</PlayerControls>

	<VideoOSD>
