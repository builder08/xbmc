			<escape>Back</escape>
		</keyboard>
	</ContextMenu>

	<Scripts>
		<keyboard>
			<e>Info</e>
		</keyboard>
	</Scripts>

	<MusicInformation>
		<keyboard>
			<escape>Back</escape>
		</keyboard>
	</MusicInformation>

	<MovieInformation>
		<keyboard>
			<escape>Back</escape>
		</keyboard>
	</MovieInformation>

	<PictureInfo>
