	<OSDAudioSettings>
		<keyboard>
			<e>Info</e>
			<j>CodecInfo</j>
		</keyboard>
	</OSDAudioSettings>

	<MyVideoPlaylist>
		<keyboard>
			<escape>Back</escape>
			<red>Delete</red>
			<pageup>MoveItemUp</pageup>
			<pagedown>MoveItemDown</pagedown>
		</keyboard>
	</MyVideoPlaylist>

	<MyPictures>
		<keyboard>
			<red>Delete</red>
		</keyboard>
	</MyPictures>

	<ContextMenu>
