							<label>$PARAM[label2]</label>
						</control>
					</itemlayout>
				<focusedlayout width="890" height="$PARAM[height]">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<right>0</right>
						<bottom>0</bottom>
