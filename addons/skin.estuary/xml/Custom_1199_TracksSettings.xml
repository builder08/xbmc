<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1199">
	<defaultcontrol always="true">11000</defaultcontrol>
	<includes>
		<include>Animation_DialogPopupOpenClose</include>
	</includes>
	<controls>
		<control type="group">
			<centerleft>50%</centerleft>
			<height>460</height>
			<centertop>50%</centertop>
			<width>700</width>
			<animation effect="fade" time="200">VisibleChange</animation>
			<include content="DialogBackgroundCommons">
				<param name="width" value="700" />
				<param name="height" value="80" />
				<param name="header_label" value="$LOCALIZE[31612]" />
				<param name="header_id" value="1" />
			</include>
			<control type="group" id="11000">
				<left>0</left>
				<top>80</top>
				<control type="grouplist" id="11100">
					<width>700</width>
					<height>420</height>
					<itemgap>0</itemgap>
					<onup>11100</onup>
					<ondown>11100</ondown>
					<orientation>vertical</orientation>
					<control type="radiobutton" id="11101">
						<description>ShowSubtitles</description>
						<include>DialogSettingButton</include>
						<label>$LOCALIZE[13397]</label>
						<onclick>ShowSubtitles</onclick>
						<selected>VideoPlayer.SubtitlesEnabled</selected>
						<visible>!VideoPlayer.Content(LiveTV) | VideoPlayer.HasSubtitles</visible>
						<enable>VideoPlayer.HasSubtitles</enable>
					</control>
					<control type="button" id="11102">
						<width>700</width>
						<include>DialogSettingButton</include>
						<label>$LOCALIZE[31115]</label>
						<label2>$VAR[ActiveVideoPlayerSubtitleLanguage]</label2>
						<onclick>CycleSubtitle</onclick>
						<visible>!VideoPlayer.Content(LiveTV) | VideoPlayer.HasSubtitles</visible>
						<enable>VideoPlayer.HasSubtitles</enable>
					</control>
					<control type="button" id="11103">
						<width>700</width>
						<include>DialogSettingButton</include>
						<label>$LOCALIZE[31112]</label>
						<label2>[B]$INFO[VideoPlayer.AudioLanguage][/B]</label2>
						<onclick>AudioNextLanguage</onclick>
						<visible>!VideoPlayer.Content(LiveTV) | Integer.IsGreater(VideoPlayer.AudioStreamCount,1)</visible>
						<enable>Integer.IsGreater(VideoPlayer.AudioStreamCount,1)</enable>
					</control>
					<control type="button" id="11104">
						<width>700</width>
						<include>DialogSettingButton</include>
						<label>$LOCALIZE[31613]</label>
						<onclick>videonextstream</onclick>
						<visible>!VideoPlayer.Content(LiveTV) | Integer.IsGreater(VideoPlayer.VideoStreamCount,1)</visible>
						<enable>Integer.IsGreater(VideoPlayer.VideoStreamCount,1)</enable>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
